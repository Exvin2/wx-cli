# Copy this file to `.env` and replace placeholder values with your own secrets.
# Variables left blank fall back to the defaults described in README.md.

# Primary AI routing via OpenRouter
OPENROUTER_API_KEY=replace-with-your-openrouter-key
OPENROUTER_MODEL=
OPENROUTER_MODELS=

# Optional Gemini fallback
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash-exp

# Optional overrides for experiments
AI_TEMPERATURE=0.2
AI_MAX_TOKENS=900
UNITS=imperial
PRIVACY_MODE=1
WX_OFFLINE=0

# Reserved for future integrations (e.g., National Weather Service)
NWS_API_KEY=
